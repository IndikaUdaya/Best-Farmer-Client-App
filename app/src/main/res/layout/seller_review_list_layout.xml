<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bar="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView9"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:background="@drawable/view_rating_all_background"
        android:padding="10dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView

                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_drop_down_circle_24" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:contentDescription="@string/farmer_image"
                    android:src="@drawable/default_farmer_icon" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/farmer_s_name"
                    android:textAlignment="center"
                    android:textColor="@color/grey_font"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ratings_and_reviews"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/rating_count"
                        android:textColor="@color/danger"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:ratingBarStyleIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/gold"
                        android:rating="3.5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:text="@string/reviews_count"
                        android:textColor="@color/info"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.skydoves.progressview.ProgressView
                        android:id="@+id/progressView5"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:progressView_autoAnimate="true"
                        app:progressView_colorBackground="@color/white"
                        app:progressView_colorProgress="@color/primary"
                        app:progressView_labelColorInner="@color/white"
                        app:progressView_labelColorOuter="@color/black"
                        app:progressView_labelSize="13sp"
                        app:progressView_labelText="5 * - 65%"
                        app:progressView_labelTypeface="bold"
                        app:progressView_max="100"
                        app:progressView_min="15"
                        app:progressView_padding="1dp"
                        app:progressView_progress="40"
                        app:progressView_progressFromPrevious="true"
                        app:progressView_radius="12dp" />

                    <com.skydoves.progressview.ProgressView
                        android:id="@+id/progressView4"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:progressView_autoAnimate="true"
                        app:progressView_colorBackground="@color/white"
                        app:progressView_colorProgress="@color/primary_light2"
                        app:progressView_labelColorInner="@color/white"
                        app:progressView_labelColorOuter="@color/black"
                        app:progressView_labelSize="13sp"
                        app:progressView_labelSpace="10dp"
                        app:progressView_labelText="4 * - 65%"
                        app:progressView_labelTypeface="bold"
                        app:progressView_max="100"
                        app:progressView_min="15"
                        app:progressView_padding="1dp"
                        app:progressView_progress="40"
                        app:progressView_progressFromPrevious="false"
                        app:progressView_radius="12dp" />

                    <com.skydoves.progressview.ProgressView
                        android:id="@+id/progressView3"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:progressView_autoAnimate="true"
                        app:progressView_colorBackground="@color/white"
                        app:progressView_colorProgress="@color/info"
                        app:progressView_labelColorInner="@color/white"
                        app:progressView_labelColorOuter="@color/black"
                        app:progressView_labelSize="13sp"
                        app:progressView_labelSpace="10dp"
                        app:progressView_labelText="3 * - 65%"
                        app:progressView_labelTypeface="bold"
                        app:progressView_max="100"
                        app:progressView_min="15"
                        app:progressView_padding="1dp"
                        app:progressView_progress="40"
                        app:progressView_progressFromPrevious="false"
                        app:progressView_radius="12dp" />

                    <com.skydoves.progressview.ProgressView
                        android:id="@+id/progressView2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:progressView_autoAnimate="true"
                        app:progressView_colorBackground="@color/white"
                        app:progressView_colorProgress="@color/warning"
                        app:progressView_labelColorInner="@color/white"
                        app:progressView_labelColorOuter="@color/black"
                        app:progressView_labelSize="13sp"
                        app:progressView_labelSpace="10dp"
                        app:progressView_labelText="2 * - 65%"
                        app:progressView_labelTypeface="bold"
                        app:progressView_max="100"
                        app:progressView_min="15"
                        app:progressView_padding="1dp"
                        app:progressView_progress="40"
                        app:progressView_progressFromPrevious="false"
                        app:progressView_radius="12dp" />

                    <com.skydoves.progressview.ProgressView
                        android:id="@+id/progressView1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:progressView_autoAnimate="true"
                        app:progressView_colorBackground="@color/white"
                        app:progressView_colorProgress="@color/danger"
                        app:progressView_labelColorInner="@color/white"
                        app:progressView_labelColorOuter="@color/black"
                        app:progressView_labelSize="13sp"
                        app:progressView_labelSpace="10dp"
                        app:progressView_labelText="1 * - 65%"
                        app:progressView_labelTypeface="bold"
                        app:progressView_max="100"
                        app:progressView_min="0"
                        app:progressView_padding="1dp"
                        app:progressView_progress="65"
                        app:progressView_progressFromPrevious="false"
                        app:progressView_radius="12dp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/grey_font" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/seller_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>